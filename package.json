{
  "name": "workspace",
  "version": "0.2.2",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "Monorepo starter",
  "author": {
    "email": "nandor.dudas@gmail.com",
    "name": "Nándor Dudás",
    "url": "https://github.com/nandordudas"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.14.2",
    "pnpm": ">=8.2.0"
  },
  "scripts": {
    "build": "turbo build",
    "check-exports": "turbo check-exports",
    "clean": "pnpm run --parallel clean; rimraf -g {.pnpm-store,node_modules}/{*,.*} 2>/dev/null",
    "lint:fix": "eslint --fix .",
    "lint": "turbo lint",
    "prepare": "pnpm setup:husky",
    "release:patch": "npx bumpp patch --no-verify --yes",
    "setup:husky": "husky install ./configs/commitlint-config/hooks",
    "test": "turbo test -- --coverage --single-thread",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@total-typescript/ts-reset": "^0.4.2",
    "@vitest/coverage-c8": "^0.30.1",
    "@workspace/commitlint-config": "^0.2.0",
    "@workspace/eslint-config": "^0.2.0",
    "@workspace/typescript-config": "^0.2.0",
    "check-export-map": "^1.3.0",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "unbuild": "^1.2.1",
    "vite": "^4.3.1",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.29.8"
  },
  "commitlint": {
    "extends": "@workspace",
    "parserPreset": {
      "parserOpts": {
        "issuePrefixes": [
          "WRKSPC-"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "@workspace",
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "caseInsensitive": true,
            "order": "asc"
          },
          "newlines-between": "always",
          "groups": [
            "external",
            "builtin",
            [
              "sibling",
              "parent"
            ],
            "index",
            "object"
          ],
          "pathGroups": [
            {
              "group": "external",
              "pattern": "~/**",
              "position": "after"
            }
          ]
        }
      ]
    }
  }
}
